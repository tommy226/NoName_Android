<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="Font_family_light" parent="AppTheme">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Font_family_regular" parent="AppTheme">
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>

    <style name="OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="customBottomSheet" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetRounding</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="bottomSheetRounding" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/top_radius_white_box</item>
        <item name="behavior_peekHeight">1000dp</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_hold</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_hold</item>
    </style>

    <style name="baseFontSetting">
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="H1_24pt_Regular" parent="baseFontSetting">
        <item name="fontFamily">@font/notosanskr_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">12sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="H2_24pt_Light" parent="baseFontSetting">
        <item name="fontFamily">@font/notosanskr_light</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">12sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="H3_18pt_SemiBold" parent="baseFontSetting">
        <item name="fontFamily">@font/notosanskr_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:letterSpacing">-0.03</item>
    </style>

    <style name="H3_18pt_Regular" parent="baseFontSetting">
        <item name="fontFamily">@font/notosanskr_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">6dp</item>
