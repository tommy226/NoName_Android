    </style>

    <style name="P1_16pt_Medium" parent="baseFontSetting">
        <item name="fontFamily">@font/notosanskr_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
